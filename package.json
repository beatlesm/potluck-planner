{
  "name": "build-week-scaffolding-node",
  "version": "1.0.0",
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "heroku-postbuild": "cd client && npm i && npm run build",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "resetdb": "npm run rollback && npm run migrate && npm run seed",
    "migrate:h": "heroku run knex migrate:latest -a potluck-5044",
    "rollback:h": "heroku run knex migrate:rollback -a potluck-5044",
    "database:h": "heroku pg:psql -a potluck-5044",
    "seed:h": "heroku run knex seed:run -a potluck-5044",
    "resetdb:h": "npm run rollback:h && npm run migrate:h && npm run seed:h",
    "test": "cross-env NODE_ENV=testing jest --verbose --runInBand",
    "deploy": "git push heroku main"
  },
  "engines": {
    "node": "16.13.2"
  },
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "2.8.5",
    "dotenv": "^14.3.0",
    "express": "4.17.2",
    "helmet": "5.0.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "1.0.1",
    "knex-cleaner": "1.3.1",
    "morgan": "^1.10.0",
    "pg": "8.7.1"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "cross-env": "7.0.3",
    "eslint": "8.7.0",
    "jest": "27.4.7",
    "nodemon": "2.0.15",
    "supertest": "6.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bloominstituteoftechnology/build-week-scaffolding-node.git"
  }
}
